{
  "name": "@allenchuang/nimbus",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup index.ts cli/index.ts --format esm --dts --outDir dist",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "cli": "tsx cli/index.ts",
    "example:basic-grid": "tsx examples/basic-grid-bot.ts",
    "example:advanced-grid": "tsx examples/advanced-grid-bot.ts",
    "example:dca": "tsx examples/dca-bot.ts",
    "example:martingale": "tsx examples/martingale-bot.ts",
    "example:portfolio": "tsx examples/portfolio-bot.ts",
    "example:multi": "tsx examples/multi-strategy.ts",
    "example:custom": "tsx examples/custom-strategy.ts"
  },
  "dependencies": {
    "hyperliquid": "^1.7.6",
    "dotenv": "^16.4.5",
    "tsup": "^8.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "bin": {
    "nimbus": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  }
}
